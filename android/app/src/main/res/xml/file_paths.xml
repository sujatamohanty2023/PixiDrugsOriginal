<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Share files from getExternalStorageDirectory() -->
    <external-path
        name="external_files"
        path="." />

    <!-- Share files from getCacheDir() or getFilesDir() -->
    <files-path
        name="internal_files"
        path="." />

    <!-- Optional: Temporary directory (used by getTemporaryDirectory()) -->
    <cache-path
        name="cache"
        path="." />
</paths>
